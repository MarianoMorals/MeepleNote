<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MeepleNote.Views.PerfilPage"
    BackgroundColor="{StaticResource BackgroundColor}">
    <ScrollView Padding="20">
        <VerticalStackLayout>
            <Label Text="Perfil de Usuario"
                   FontSize="24"
                   HorizontalOptions="Center" />
            <Label Text="Nombre:" />
            <Entry x:Name="NombreEntry" Text="{Binding Nombre}" IsReadOnly="True" Placeholder="Tu nombre" />
            <Label Text="Fecha de Nacimiento:" />
            <DatePicker x:Name="FechaNacimientoPicker" Date="{Binding FechaNacimiento}" IsEnabled="False"/>
            <Button Text="Restablecer contraseña" Clicked="OnRestablecerContraseñaClicked" />
            <Button Text="Cerrar sesión" Clicked="OnCerrarSesionClicked" BackgroundColor="{StaticResource AccentColor}" TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
