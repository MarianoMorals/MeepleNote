<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MeepleNote.Views.DetalleJuegoPage"
    BackgroundColor="{StaticResource BackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Image x:Name="ImagenPortada" HeightRequest="200" Aspect="AspectFit"/>
            <Label x:Name="Titulo" FontSize="24" FontAttributes="Bold" TextColor="Black"/>
            <Label x:Name="Puntuacion" FontSize="18" TextColor="Gray"/>
            <Label x:Name="Jugadores" FontSize="18"/>
            <Label x:Name="Duracion" FontSize="18"/>
            <Label x:Name="Edad" FontSize="18"/>
            <Label x:Name="Autor" FontSize="18"/>
            <Label x:Name="Artista" FontSize="18"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
