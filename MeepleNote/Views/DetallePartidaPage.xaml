<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MeepleNote.Views.DetallePartidaPage"
    Title="Detalle Partida"
    BackgroundColor="{StaticResource BackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Frame BorderColor="{StaticResource PrimaryColor}" 
                   CornerRadius="12" 
                   Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding TituloJuego}" 
                           FontSize="20" 
                           FontAttributes="Bold"/>

                    <Label Text="{Binding Fecha, StringFormat='Fecha: {0:dd/MM/yyyy}'}"/>
                    <Label Text="{Binding Ganador, StringFormat='Ganador: {0}'}" 
                           FontAttributes="Bold"/>

                    <Label Text="Jugadores:" 
                           FontAttributes="Bold" 
                           Margin="0,10,0,0"/>

                    <CollectionView ItemsSource="{Binding Jugadores}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Label Text="{Binding NombreJugador}" 
                                       Margin="10,5"/>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <Button Text="Eliminar Partida"
                            BackgroundColor="Red"
                            TextColor="White"
                            CornerRadius="10"
                            Padding="10"
                            Clicked="OnEliminarPartidaClicked"/>


                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>