<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeepleNote.Views.LoginPage"
             Title="LoginPage">

    <ScrollView Padding="30" VerticalOptions="Center">
        <VerticalStackLayout Spacing="15">

            <Image Source="logo.png"
                    HeightRequest="150"
                    WidthRequest="150"
                    HorizontalOptions="Center"
                    Margin="0,20" />

            <Label Text="MeepleNote"
                    FontSize="32"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Margin="0,10" />

            <Entry x:Name="UsernameEntry" Placeholder="Email" />
            <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True" />

            <HorizontalStackLayout HorizontalOptions="Center">
                <CheckBox x:Name="RecordarSesionCheck" />
                <Label Text="Mantener sesión iniciada" VerticalOptions="Center" />
            </HorizontalStackLayout>

            <Button Text="Iniciar sesión" Clicked="OnLoginClicked" />
            <Button Text="Registrarse" Clicked="OnIrARegistro" />
            <Button Text="Restablecer Contraseña" Clicked="OnRestablecerContraseñaClicked"  />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
