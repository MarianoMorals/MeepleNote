<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeepleNote.Views.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout Padding="30" Spacing="15">
        <Entry x:Name="UsernameEntry" Placeholder="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True" />
        <CheckBox x:Name="RecordarSesionCheck" />
        <Label Text="Mantener sesión iniciada" />
        <Button Text="Iniciar sesión" Clicked="OnLoginClicked" />
        <Button Text="Registrarse" Clicked="OnIrARegistro"/>

    </VerticalStackLayout>

</ContentPage>